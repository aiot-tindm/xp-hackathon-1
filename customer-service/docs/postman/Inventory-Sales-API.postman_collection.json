        },
        {
          "name": "3. Customer Predictions & Trends",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerIds\": [1, 2, 3],\n  \"includeRecommendations\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/analytics/customers/predictions",
              "host": ["{{baseUrl}}"],
              "path": ["analytics", "customers", "predictions"]
            },
            "description": "Get CLV predictions, churn risk, and product recommendations for customers"
          }
        },
        {
          "name": "4. Customer RFM Analysis",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/analytics/customers/rfm?businessType=default",
              "host": ["{{baseUrl}}"],
              "path": ["analytics", "customers", "rfm"],
              "query": [
                {
                  "key": "businessType",
                  "value": "default",
                  "description": "Business type for RFM thresholds"
                }
              ]
            },
            "description": "Analyze customers using Recency, Frequency, Monetary scoring"
          }
        },
        {
          "name": "5. Customer Churn Prediction",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/analytics/customers/churn-prediction?days=90&businessType=default",
              "host": ["{{baseUrl}}"],
              "path": ["analytics", "customers", "churn-prediction"],
              "query": [
                {
                  "key": "days",
                  "value": "90",
                  "description": "Days threshold for churn prediction"
                },
                {
                  "key": "businessType",
                  "value": "default",
                  "description": "Business type for churn thresholds"
                }
              ]
            },
            "description": "Predict which customers are likely to churn"
          }
        },
        {
          "name": "6. Potential Customer Suggestions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/analytics/customers/new-inventory-matching?productIds=1,2&categoryIds=1&limit=10&businessType=default",
              "host": ["{{baseUrl}}"],
              "path": ["analytics", "customers", "new-inventory-matching"],
              "query": [
                {
                  "key": "productIds",
                  "value": "1,2",
                  "description": "Comma-separated product IDs"
                },
                {
                  "key": "categoryIds",
                  "value": "1",
                  "description": "Comma-separated category IDs"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Number of customers to return"
                },
                {
                  "key": "businessType",
                  "value": "default",
                  "description": "Business type for scoring"
                }
              ]
            },
            "description": "Find customers interested in specific products or categories"
          }
        }
