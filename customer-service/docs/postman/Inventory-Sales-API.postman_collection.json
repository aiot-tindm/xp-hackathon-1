      "item": [
        {
          "name": "1. Customer Analytics Overview",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/analytics/customers?page=1&limit=10&businessType=default",
              "host": ["{{baseUrl}}"],
